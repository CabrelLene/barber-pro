generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email    String  @unique
  password String
  fullName String
  phone    String?

  role UserRole @default(CLIENT)

  barberProfile BarberProfile?
  bookings      Booking[]
  reviews       Review[]
}

model BarberProfile {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique

  shopName     String
  description  String?
  phone        String?
  addressLine1 String
  addressLine2 String?
  city         String
  province     String
  postalCode   String
  latitude     Float?
  longitude    Float?

  services Service[]
  bookings Booking[]
  reviews  Review[]
}

model Service {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  barber   BarberProfile @relation(fields: [barberId], references: [id])
  barberId String

  name        String
  description String?
  durationMin Int
  priceCents  Int
  bookings    Booking[]
}

model Booking {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  client   User   @relation(fields: [clientId], references: [id])
  clientId String

  barber   BarberProfile @relation(fields: [barberId], references: [id])
  barberId String

  service   Service @relation(fields: [serviceId], references: [id])
  serviceId String

  scheduledAt DateTime
  status      BookingStatus @default(PENDING)

  totalPriceCents     Int

  // ðŸ”¥ AJOUTE CETTE LIGNE :
  stripePaymentIntentId String?
}


model Review {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  client   User   @relation(fields: [clientId], references: [id])
  clientId String

  barber   BarberProfile @relation(fields: [barberId], references: [id])
  barberId String

  rating  Int
  comment String?
}

enum UserRole {
  CLIENT
  BARBER
  ADMIN
}

enum BookingStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELED
  NO_SHOW
}
